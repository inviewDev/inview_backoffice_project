{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --omit=optional",
        "buildCommand": "npm run build",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|woff|woff2))$", "dest": "/dist/$1" },
    { "src": "/(.*)", "dest": "/" }
  ]
}