{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/assets/(.*\\.js)", "dest": "/dist/assets/$1", "headers": { "Content-Type": "application/javascript" } },
    { "src": "/assets/(.*\\.css)", "dest": "/dist/assets/$1", "headers": { "Content-Type": "text/css" } },
    { "src": "/assets/(.*\\.(ico|png|jpg|jpeg|svg|woff|woff2))", "dest": "/dist/assets/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}